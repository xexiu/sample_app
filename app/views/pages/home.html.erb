<% if signed_in? %>
<tableclass="front" summary="For signed-in users">
<tr>
  <td class="main">
    <%= render 'shared/user_info' %>
  </td>
  <td class="sidebar round">
    <h1 class="micropost">What's up?</h1>
    <%= render 'shared/micropost_form' %>
  </td>
</tr>
</table>
<% else %>
<h1>Sample App</h1>
<p>This is the home page for the <a href="#">Ruby on Rails Tutorial</a> sample application.</p>
<%= link_to "Sign up now!", signup_path, :class => "signup_button round" %>
<% end %>
